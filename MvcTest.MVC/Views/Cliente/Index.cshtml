@using Microsoft.AspNetCore.Mvc.Rendering
@using MvcTest.Application.DTOs
@model List<MvcTest.Application.DTOs.ClienteDto>

@{
    ViewData["Title"] = "Clientes";
    
    
}

<div style="padding: 10px; background-color: white">
    <button id="abrirModal" class="btn btn-outline-success">Añadir Cliente</button>
    <br/>
    <br/>
    <div>
        <table class="table">
            <tr>
                <th>Nombre</th>
                <th>Pais</th>
                <th>Tipo de Cliente</th>
                <th>Acciones</th>
            </tr>
            @foreach (var cliente in Model!)
            {
                <tr>
                    <td>
                        @cliente.Nombre
                    </td>
                    <td>
                        @cliente.PaisNombre
                    </td>
                    <td>
                        @cliente.TipoCliente
                     </td>
                    <td>
                        <button class="btn btn-danger" onclick="deleteCliente(@cliente.Id)">Borrar</button>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

@await Html.PartialAsync("_agregarCliente.cshtml", new ClienteDto())

<script>
    function deleteCliente(idCliente){
        let url = "https://localhost:7180/Cliente/Delete?id=" + idCliente
            $.ajax({
                    type: "DELETE",
                    url: url,
                    content: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function(x) {
                        location.reload();
                    },
                    error: function () {
                          alert('Error al eliminar el cliente con id ' + idCliente);
                    }
                });
    }
    
    let modal = document.getElementById("myModal");
    let btn = document.getElementById("abrirModal");
    let span = document.getElementsByClassName("close")[0];
    
    btn.onclick = function() {
      modal.style.display = "block";
    }
    
    span.onclick = function() {
      modal.style.display = "none";
    }
    
    window.onclick = function(event) {
      if (event.target === modal) {
        modal.style.display = "none";
      }
    }
</script>

<style>
    .modal {
      display: none;
      position: fixed;
      z-index: 1;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
      background-color: rgb(0,0,0);
      background-color: rgba(0,0,0,0.4);
    }
    .modal-content {
      background-color: #fefefe;
      margin: 15% auto;
      padding: 20px;
      border: 1px solid #888;
      width: 25%;
    }
    .close {
      color: #aaa;
      float: right;
      font-size: 28px;
      font-weight: bold;
    }
    .close:hover,
    .close:focus {
      color: black;
      text-decoration: none;
      cursor: pointer;
    }
</style>